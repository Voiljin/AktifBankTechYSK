@using AktifBankTech.Web.Client.Helper.Url

@{
    ViewBag.Title = "CreateSubscriber";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/JSTools/Subscriber/subscriber.js" type="text/javascript"></script>

<div class="row">
    <div class="col-xl-6 col-lg-6 ">
        <!-- START card -->
        <div class="card">
            <div class="card-header ">
                <div class="card-title">
                    Aktifbank CMS
                </div>
            </div>
            <div class="card-body">
                <h2 class="mw-80">Abonelik Oluşturma</h2>
                <p class="fs-16 mw-80 m-b-40">Bu sayfadan yeni bir abonelik oluşturabilirsiniz.</p>
                <form id="form-personal" role="form" autocomplete="off" onsubmit="return false" insertUrl="@UrlManager.GetUrl("CreateSubscriberPost")">
                    <div class="row clearfix">
                        <div class="col-xl-6">
                            <div class="form-group form-group-default required">
                                <label>Ad</label>
                                <input type="text" class="form-control" name="firstName" placeholder="Ad" required>
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div class="form-group form-group-default">
                                <label>Soyad</label>
                                <input type="text" class="form-control" name="lastName" placeholder="Soyad" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group form-group-default">
                                <label>TC No:</label>
                                <input type="text" class="form-control" name="tcno" placeholder="TC No" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group form-group-default">
                                <label>Vergi Numarası (Tüzel Müşteriler İçin)</label>
                                <input type="text" class="form-control" name="taxNumber" placeholder="Vergi Numarası" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group form-group-default">
                                <label>Abonelik Tipi</label>
                                <select id="statusSelectItem" class="full-width" data-init-plugin="select2">
                                    <option value="1">Bireysel</option>
                                    <option value="2">Tüzel</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="row m-t-25">
                        <div class="col-xl-6 p-b-10">

                        </div>
                        <div class="col-xl-6">
                            <button aria-label="" class="btn btn-primary pull-right btn-lg btn-block" type="submit" onclick="CreateSubscriber()">
                                Abonelik Oluştur
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- END card -->
    </div>
</div>

